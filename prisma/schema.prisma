generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  name           String
  CoursesOnUsers CoursesOnUsers[]
  PostsOnUsers   PostsOnUsers[]
}

model Course {
  id             Int              @id @default(autoincrement())
  title          String
  coverImage     String
  CoursesOnUsers CoursesOnUsers[]
  posts          Post[]
  menuItem       MenuItem[]       @relation("CourseToMenuItem")
}

model Post {
  id           Int            @id @default(autoincrement())
  title        String
  content      String?
  createTime   DateTime       @default(now())
  updateTime   DateTime       @updatedAt
  courseId     Int
  course       Course         @relation(fields: [courseId], references: [id])
  PostsOnUsers PostsOnUsers[]

  @@index([courseId], map: "Post_courseId_fkey")
}

model CoursesOnUsers {
  courseId Int
  userId   String
  course   Course @relation(fields: [courseId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@id([courseId, userId])
  @@index([userId], map: "CoursesOnUsers_userId_fkey")
}

model PostsOnUsers {
  userId       String
  postId       Int
  readProgress Int
  post         Post   @relation(fields: [postId], references: [id])
  user         User   @relation(fields: [userId], references: [id])

  @@id([postId, userId])
  @@index([userId], map: "PostsOnUsers_userId_fkey")
}

model MenuItem {
  id       Int        @id @default(autoincrement())
  label    String
  parentId Int?
  parent   MenuItem?  @relation("ChildToParent", fields: [parentId], references: [id], onDelete: Cascade)
  children MenuItem[] @relation("ChildToParent")
  course   Course[]   @relation("CourseToMenuItem")

  @@index([parentId], map: "MenuItem_parentId_fkey")
}
